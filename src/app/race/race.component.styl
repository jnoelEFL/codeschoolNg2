.button
  background #fd79fc
  border-radius 3px
  border 0
  color #ffffff
  width 120px

.button-cancel
  background none
  border 0
  color #fd79fc
  text-decoration underline
  width 120px

.card
  background #44464c
  margin-bottom 30px
  min-height 160px
  &.racing
    background #24262c
  &:last-child
    margin-bottom 0

.date, .price
  color #9397d8

.description
  color #66d9f7

.panel-body
  display table
  padding 0

.photo
  float left
  margin-right 30px

.price
  margin 0
  font-size 18px
  text-align center
  width 120px

.race-info
  display table-cell
  vertical-align middle
  h3
    margin 0 0
    a
      color white
  td
    &:last-child
      padding 0 20px
  tbody
    display inline-block

.race-info, .race-info tbody, .race-info tr, .race-info td
  width 100%

.status
  color #fd79fc
  text-align center
